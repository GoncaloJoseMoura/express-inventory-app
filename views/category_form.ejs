<h1><%= title %></h1>
<form method="POST">
  <div class="form-group">
    <label for="name">Category: </label>
    <input
      type="text"
      name="name"
      id="name"
      class="form-control"
      placeholder="Computers, Mobile phones etc."
      value="<%= category === undefined ? '' : category.name %>"
      required
    />
  </div>
  <div class="form-group">
    <label for="description">Description: </label>
    <input
      type="text"
      name="description"
      id="description"
      class="form-control"
      placeholder="Handheld devices that can ..."
      value="<%= category === undefined ? '' : category.description %>"
      required
    />
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>
<% if(errors) { %>
<ul>
  <% errors.forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>
